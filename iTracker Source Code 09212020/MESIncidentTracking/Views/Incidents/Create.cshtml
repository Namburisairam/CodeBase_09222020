@{
    ViewData["Title"] = "Create";
}

<h2>Add Incident</h2>
<p class="alert-danger">@TempData["Error"]</p>
<hr />


<form asp-action="Create" autocomplete="off">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="LocalTimeString" />

    <div class="row">
        @{ await Html.RenderPartialAsync("AddEditIncidentPartialView"); }
    </div>
    <div class="form-group">
        <input id="submitButton" type="submit" value="Create" class="btn btn-default" />
    </div>
</form>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    @{ await Html.RenderPartialAsync("AddEditIncidentScripts"); }
}